<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="24" styleClass="main_container" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkflow.deskoptworker.Controllers.Worker.CustomersViewController">

    <!-- Header Section -->
    <VBox spacing="16">
        <Label style="-fx-font-family: 'Inter 18pt Bold'; -fx-font-size: 32px; -fx-text-fill: #333333;" styleClass="page-title" text="Customers" />

        <!-- Search Bar -->
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="search-container">
            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                <image>
                    <Image url="@../images/search.png" />
                </image>
            </ImageView>

            <TextField fx:id="searchField" promptText="Search by name, email, ID or PESELE..." styleClass="search-field" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>

    <!-- Table Section -->
    <TableView fx:id="customersTable" minHeight="560" style="-fx-background-color: white; -fx-background-radius: 12px;" styleClass="table-view" VBox.vgrow="ALWAYS">

        <columns>
            <!-- Customer Column (Name + Email) -->
            <TableColumn fx:id="customerColumn" prefWidth="300"  text="CUSTOMER" />

            <!-- Vehicles Column -->
            <TableColumn fx:id="vehiclesColumn" prefWidth="250" sortable="false"  text="VEHICLES" />

            <!-- Wallet Column -->
            <TableColumn fx:id="walletColumn" prefWidth="150"  text="WALLET" />

            <!-- Total Spent Column -->
            <TableColumn fx:id="totalSpentColumn" prefWidth="150"  text="TOTAL SPENT" />

            <!-- Action Column (Arrow Button) -->
            <TableColumn fx:id="actionColumn" sortable="false" style="-fx-alignment: CENTER;"  text="" />
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <stylesheets>
      <URL value="@../styles/table.css" />
      <URL value="@../styles/mainPanel.css" />
   </stylesheets>

</VBox>

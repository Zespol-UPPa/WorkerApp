<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="parkflow.deskoptworker.Controllers.Components.FilterBarController"
      styleClass="filter-bar"
      spacing="12"
      alignment="CENTER_LEFT" stylesheets="@../styles/reports.css">

    <padding>
        <Insets top="16" bottom="16" left="0" right="0"/>
    </padding>

    <!-- Filter icon -->
    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
        <image>
            <Image url="@../images/funnel.png"/>
        </image>
    </ImageView>

    <!-- Time period filter -->
    <ComboBox fx:id="timePeriodCombo"
              styleClass="filter-combo"
              promptText="Select period"
              />

    <!-- Parking selection filter -->
    <ComboBox fx:id="parkingCombo"
              styleClass="filter-combo"
              promptText="Select parking"
              />

</HBox>
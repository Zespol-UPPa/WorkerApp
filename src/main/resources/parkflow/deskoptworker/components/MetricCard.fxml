<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_LEFT" minWidth="200" prefHeight="140" spacing="8" styleClass="metric-card" stylesheets="@../styles/reports.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkflow.deskoptworker.Controllers.Components.MetricCardController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header: Icon + Title -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <ImageView fx:id="iconView" fitHeight="24" fitWidth="24" preserveRatio="true" styleClass="metric-icon" />

        <Label fx:id="titleLabel" styleClass="metric-title" wrapText="true" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Value -->
    <Label fx:id="valueLabel" styleClass="metric-value" text="0" />

    <!-- Subtitle -->
    <Label fx:id="subtitleLabel" styleClass="metric-subtitle" wrapText="true" />

</VBox>

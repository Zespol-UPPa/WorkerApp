<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" minWidth="200" styleClass="metric-card" stylesheets="@../styles/components.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkflow.deskoptworker.Controllers.Components.MetricCardController">

    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>

    <!-- Header: Icon + Title -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <ImageView fx:id="iconView" fitHeight="24" fitWidth="24" managed="false" preserveRatio="true" visible="false" />

        <Label fx:id="titleLabel" styleClass="metric-title" text="Title" wrapText="true" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Value -->
    <Label fx:id="valueLabel" styleClass="metric-value" text="0" />

    <!-- Subtitle -->
    <Label fx:id="subtitleLabel" styleClass="metric-subtitle" text="description" wrapText="true" />

</VBox>

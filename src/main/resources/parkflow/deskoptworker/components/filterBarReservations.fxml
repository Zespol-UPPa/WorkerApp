<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox alignment="CENTER_LEFT" spacing="12" styleClass="filter-bar" stylesheets="@../styles/customers.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parkflow.deskoptworker.Controllers.Components.FilterBarReservationsController">

    <padding>
        <Insets bottom="16" left="0" right="0" top="16" />
    </padding>

    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
        <image>
            <Image url="@../images/funnel.png" />
        </image>
    </ImageView>

    <Button fx:id="filterAllBtn" mnemonicParsing="false" styleClass="filter-btn, filter-btn-active"
            text="All" onAction="#onFilterAll" />
    <Button fx:id="filterActiveBtn" mnemonicParsing="false" styleClass="filter-btn"
            text="Active" onAction="#onFilterActive" />
    <Button fx:id="filterUpcomingBtn" mnemonicParsing="false" styleClass="filter-btn"
            text="Upcoming" onAction="#onFilterUpcoming" />
    <Button fx:id="filterHistoryBtn" mnemonicParsing="false" styleClass="filter-btn"
            text="History" onAction="#onFilterHistory" />

</HBox>

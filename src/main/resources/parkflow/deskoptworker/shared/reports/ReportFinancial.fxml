<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="1110.0" spacing="0" stylesheets="@../../styles/reports.css, @../../styles/mainPanel.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parkflow.deskoptworker.Controllers.sharedPanels.Reports.ReportFinancialController"
      style="-fx-background-color: transparent;">

    <VBox spacing="12" style="-fx-background-color: transparent;">

        <!-- Title section -->
        <VBox spacing="4">
            <Label styleClass="main_title" text="Financial Reports" />
            <Label styleClass="main_subtitle" text="Real-time analytics and performance metrics" />
        </VBox>

        <!-- Top 3 STATUS CARDS (z ikonkami) -->
        <GridPane hgap="20" vgap="20">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.33" />
            </columnConstraints>

            <!-- Status Card 1: Total Revenue -->
            <fx:include source="../../components/statusCard.fxml" fx:id="totalRevenueCard" GridPane.columnIndex="0" GridPane.rowIndex="0" />

            <!-- Status Card 2: Parking Usage -->
            <fx:include source="../../components/statusCard.fxml" fx:id="parkingUsageCard" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Status Card 3: Pending Payments -->
            <fx:include source="../../components/statusCard.fxml" fx:id="pendingPaymentsCard" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        </GridPane>

        <!-- Charts row - Bar Chart and Pie Chart -->
        <HBox spacing="20.0">
            <children>
                <!-- Revenue vs Usage - Bar Chart -->
                <VBox styleClass="section_vbox" HBox.hgrow="ALWAYS" prefWidth="50">
                    <children>
                        <Label styleClass="section_title" text="Revenue vs Usage" />
                        <BarChart fx:id="revenueUsageChart" legendVisible="true" VBox.vgrow="ALWAYS" minHeight="350">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </children>
                </VBox>

                <!-- Revenue Distribution by Parking - Pie Chart -->
                <VBox styleClass="section_vbox" HBox.hgrow="ALWAYS" prefWidth="50">
                    <children>
                        <Label styleClass="section_title" text="Revenue Distribution by Parking" />
                        <PieChart fx:id="revenueDistributionChart" legendVisible="true" VBox.vgrow="ALWAYS" minHeight="350" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Key Metrics - 4 SIMPLE METRIC CARDS -->
        <VBox styleClass="section_vbox" spacing="12">
            <children>
                <Label styleClass="section_title" text="Key Metrics" />
                <GridPane hgap="16" vgap="16">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                    </columnConstraints>

                    <!-- Simple Metric Card 1: Avg Transaction Value -->
                    <fx:include source="../../components/SimpleMetricBox.fxml" fx:id="avgTransactionCard" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                    <!-- Simple Metric Card 2: Total Transactions -->
                    <fx:include source="../../components/SimpleMetricBox.fxml" fx:id="totalTransactionsCard" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- Simple Metric Card 3: Reservation Fees -->
                    <fx:include source="../../components/SimpleMetricBox.fxml" fx:id="reservationFeesCard" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                    <!-- Simple Metric Card 4: Revenue Growth -->
                    <fx:include source="../../components/SimpleMetricBox.fxml" fx:id="revenueGrowthCard" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                </GridPane>
            </children>
        </VBox>

    </VBox>

</VBox>

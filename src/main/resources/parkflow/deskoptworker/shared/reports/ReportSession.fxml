<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="1110.0" spacing="0" stylesheets="@../../styles/reports.css, @../../styles/mainPanel.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parkflow.deskoptworker.Controllers.sharedPanels.Reports.ReportSessionController"
      style="-fx-background-color: transparent;">

    <VBox spacing="12" style="-fx-background-color: transparent;">

        <!-- Title section -->
        <VBox spacing="4">
            <Label styleClass="main_title" text="Session Analysis" />
            <Label styleClass="main_subtitle" text="Real-time analytics and performance metrics" />
        </VBox>

        <!-- Filter Bar Component -->
        <fx:include source="../../components/filterBar.fxml" fx:id="filterBar" />

        <!-- Metric Cards Grid -->
        <GridPane hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
            </columnConstraints>

            <!-- Card 1: Avg Duration -->
            <fx:include source="../../components/MetricCard.fxml" fx:id="avgDurationCard" GridPane.columnIndex="0" GridPane.rowIndex="0" />

            <!-- Card 2: Total Sessions -->
            <fx:include source="../../components/MetricCard.fxml" fx:id="totalSessionsCard" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Card 3: Active Now -->
            <fx:include source="../../components/MetricCard.fxml" fx:id="activeNowCard" GridPane.columnIndex="2" GridPane.rowIndex="0" />

            <!-- Card 4: Completed -->
            <fx:include source="../../components/MetricCard.fxml" fx:id="completedCard" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        </GridPane>

        <!-- Charts row - Duration Distribution and Breakdown -->
        <HBox spacing="20.0">
            <children>
                <!-- Session Duration Distribution - Bar Chart -->
                <VBox styleClass="section_vbox" HBox.hgrow="ALWAYS" prefWidth="50">
                    <children>
                        <Label styleClass="section_title" text="Session Duration Distribution" />
                        <BarChart fx:id="durationDistributionChart" legendVisible="false" VBox.vgrow="ALWAYS" minHeight="280">
                            <xAxis>
                                <CategoryAxis side="BOTTOM" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" />
                            </yAxis>
                        </BarChart>
                    </children>
                </VBox>

                <!-- Duration Breakdown - HBox Layout -->
                <VBox styleClass="section_vbox" HBox.hgrow="ALWAYS" prefWidth="50" spacing="12">
                    <children>
                        <Label styleClass="section_title" text="Duration Breakdown" />
                        <VBox spacing="16" VBox.vgrow="ALWAYS">

                            <!-- Item 1 -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label fx:id="time1Label" styleClass="duration-time-label" text="0-30min" />
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="count1Label" styleClass="duration-count-label" text="1245" />
                                    </HBox>
                                    <HBox prefHeight="48" maxHeight="48" spacing="0" styleClass="duration-progress-container">
                                        <StackPane fx:id="bar1" styleClass="duration-progress-bar" prefHeight="48" maxHeight="48" prefWidth="100">
                                            <Label fx:id="percent1Label" styleClass="duration-percentage-label" text="14%" />
                                        </StackPane>
                                        <Region fx:id="track1" styleClass="duration-progress-track" prefHeight="48" maxHeight="48" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>

                            <!-- Item 2 -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label fx:id="time2Label" styleClass="duration-time-label" text="30min-1h" />
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="count2Label" styleClass="duration-count-label" text="1784" />
                                    </HBox>
                                    <HBox prefHeight="48" maxHeight="48" spacing="0" styleClass="duration-progress-container">
                                        <StackPane fx:id="bar2" styleClass="duration-progress-bar" prefHeight="48" maxHeight="48" prefWidth="150">
                                            <Label fx:id="percent2Label" styleClass="duration-percentage-label" text="20%" />
                                        </StackPane>
                                        <Region fx:id="track2" styleClass="duration-progress-track" prefHeight="48" maxHeight="48" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>

                            <!-- Item 3 -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label fx:id="time3Label" styleClass="duration-time-label" text="1-2h" />
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="count3Label" styleClass="duration-count-label" text="2676" />
                                    </HBox>
                                    <HBox prefHeight="48" maxHeight="48" spacing="0" styleClass="duration-progress-container">
                                        <StackPane fx:id="bar3" styleClass="duration-progress-bar" prefHeight="48" maxHeight="48" prefWidth="200">
                                            <Label fx:id="percent3Label" styleClass="duration-percentage-label" text="30%" />
                                        </StackPane>
                                        <Region fx:id="track3" styleClass="duration-progress-track" prefHeight="48" maxHeight="48" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>

                            <!-- Item 4 -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label fx:id="time4Label" styleClass="duration-time-label" text="2-4h" />
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="count4Label" styleClass="duration-count-label" text="2141" />
                                    </HBox>
                                    <HBox prefHeight="48" maxHeight="48" spacing="0" styleClass="duration-progress-container">
                                        <StackPane fx:id="bar4" styleClass="duration-progress-bar" prefHeight="48" maxHeight="48" prefWidth="140">
                                            <Label fx:id="percent4Label" styleClass="duration-percentage-label" text="24%" />
                                        </StackPane>
                                        <Region fx:id="track4" styleClass="duration-progress-track" prefHeight="48" maxHeight="48" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>

                            <!-- Item 5 -->
                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Label fx:id="time5Label" styleClass="duration-time-label" text="4h+" />
                                <VBox spacing="8" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Label fx:id="count5Label" styleClass="duration-count-label" text="1077" />
                                    </HBox>
                                    <HBox prefHeight="48" maxHeight="48" spacing="0" styleClass="duration-progress-container">
                                        <StackPane fx:id="bar5" styleClass="duration-progress-bar" prefHeight="48" maxHeight="48" prefWidth="80">
                                            <Label fx:id="percent5Label" styleClass="duration-percentage-label" text="12%" />
                                        </StackPane>
                                        <Region fx:id="track5" styleClass="duration-progress-track" prefHeight="48" maxHeight="48" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </HBox>

                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Hourly Session Activity - Area Chart -->
        <VBox styleClass="section_vbox">
            <children>
                <Label styleClass="section_title" text="Hourly Session Activity" />
                <AreaChart fx:id="hourlyActivityChart" legendVisible="false" VBox.vgrow="ALWAYS" minHeight="280">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </AreaChart>
            </children>
        </VBox>

    </VBox>

</VBox>

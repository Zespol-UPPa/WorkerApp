<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="580.0" styleClass="pricing_main_container" stylesheets="@../styles/pricing.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkflow.deskoptworker.PricingController">
    <children>
        <Label fx:id="pricingTitle" styleClass="pricing_title" text="Pricing - Downtown Plaza" />

        <!-- Standard Parking Section -->
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Label styleClass="pricing_section_title" text="Standard Parking" />

                <!-- Free minutes - VIEW MODE -->
                <HBox fx:id="freeMinutesViewHBox" managed="true" maxHeight="40.0" styleClass="pricing_information_hbox" visible="true">
                    <children>
                        <Label text="Free minutes" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="freeMinutesLabel" styleClass="pricing_info_value" text="15 min" />
                    </children>
                </HBox>

                <!-- Free minutes - EDIT MODE -->
                <HBox fx:id="freeMinutesEditHBox" managed="false" maxHeight="40.0" styleClass="pricing_information_hbox" visible="false">
                    <children>
                        <Label text="Free minutes" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="freeMinutesField" maxWidth="100.0" promptText="15" styleClass="pricing_text_field" />
                        <Label styleClass="pricing_unit_label" text=" min" />
                    </children>
                </HBox>

                <!-- Rate per minute - VIEW MODE -->
                <HBox fx:id="ratePerMinuteViewHBox" managed="true" maxHeight="40.0" styleClass="pricing_information_hbox" visible="true">
                    <children>
                        <Label text="Rate per minute" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="ratePerMinuteLabel" styleClass="pricing_info_value" text="0.10 $" />
                    </children>
                </HBox>

                <!-- Rate per minute - EDIT MODE -->
                <HBox fx:id="ratePerMinuteEditHBox" managed="false" maxHeight="40.0" styleClass="pricing_information_hbox" visible="false">
                    <children>
                        <Label text="Rate per minute" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="ratePerMinuteField" maxWidth="100.0" promptText="0.10" styleClass="pricing_text_field" />
                        <Label styleClass="pricing_unit_label" text=" $" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Reservation Section -->
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
                <Label styleClass="pricing_section_title" text="Reservation" />

                <!-- Reservation fee - VIEW MODE -->
                <HBox fx:id="reservationFeeViewHBox" managed="true" maxHeight="40.0" styleClass="pricing_information_hbox" visible="true">
                    <children>
                        <Label text="Reservation fee" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="reservationFeeLabel" styleClass="pricing_info_value" text="5 $" />
                    </children>
                </HBox>

                <!-- Reservation fee - EDIT MODE -->
                <HBox fx:id="reservationFeeEditHBox" managed="false" maxHeight="40.0" styleClass="pricing_information_hbox" visible="false">
                    <children>
                        <Label text="Reservation fee" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="reservationFeeField" maxWidth="100.0" promptText="5" styleClass="pricing_text_field" />
                        <Label styleClass="pricing_unit_label" text=" $" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Buttons -->
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="buttons_hbox">
            <children>
                <!-- VIEW MODE Button -->
                <Button fx:id="editButton" managed="true" onAction="#handleEdit" text="Edit Pricing" visible="true">
                    <styleClass>
                        <String fx:value="buttons_basic_add" />
                        <String fx:value="buttons_basic" />
                    </styleClass>
                </Button>

                <!-- EDIT MODE Buttons -->
                <Button fx:id="saveButton" managed="false" onAction="#handleSave" text="Save" visible="false">
                    <styleClass>
                        <String fx:value="buttons_basic_add" />
                        <String fx:value="buttons_basic" />
                    </styleClass>
                </Button>
                <Button fx:id="cancelButton" managed="false" onAction="#handleCancel" styleClass="buttons_basic" text="Cancel" visible="false" />
            </children>
        </HBox>
    </children>
</VBox>

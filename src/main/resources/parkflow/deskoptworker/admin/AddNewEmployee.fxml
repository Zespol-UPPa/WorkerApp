<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="500.0" styleClass="login_container" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parkflow.deskoptworker.Controllers.Admin.AddEmpController">

   <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">

      <!-- Header -->
      <Label style="-fx-text-fill: #333333; -fx-font-size: 40;" text="Add New Worker" textFill="WHITE">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>

      <!-- Form Container -->
      <VBox spacing="15.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>

         <!-- Email -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="Email *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" promptText="worker@example.com" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- First Name -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="First Name *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="firstNameField" promptText="John" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- Last Name -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="Last Name *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="lastNameField" promptText="Doe" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- Phone -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="Phone Number *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="phoneField" promptText="500123456" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- PESEL -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="PESEL *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="peselField" promptText="90010112345" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- Parking Selection -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="Parking *" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ComboBox fx:id="parkingComboBox" prefWidth="Infinity" promptText="Select parking" style="-fx-font-size: 14px;" />
         </VBox>

         <!-- Company Info (read-only) -->
         <VBox spacing="5.0">
            <Label styleClass="login_bold_text" text="Company" textFill="#BDC3C7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="companyLabel" style="-fx-font-size: 14px; -fx-padding: 8;" text="Your Company" textFill="WHITE" />
         </VBox>

         <!-- Error Label -->
         <Label fx:id="errorLabel" managed="false" textFill="#E74C3C" visible="false" wrapText="true">
            <VBox.margin>
               <Insets top="5.0" />
            </VBox.margin>
         </Label>

         <!-- Buttons -->
         <HBox alignment="CENTER" spacing="15.0">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>

            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="150.0" styleClass="button_cancel" text="Cancel" />

            <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" prefWidth="150.0" styleClass="button_sign_in" text="Add Worker" />
         </HBox>
      </VBox>

   </VBox>
</AnchorPane>

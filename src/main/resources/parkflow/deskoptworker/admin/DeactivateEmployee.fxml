<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="parkflow.deskoptworker.Controllers.Admin.DeactivateController"
           styleClass="modal-wrapper"
           stylesheets="@../styles/mainPanel.css, @../styles/components.css">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="280.0" prefWidth="600.0"
          styleClass="confirm_container">
        <children>
            <Label styleClass="confirm_title" text="Deactivate Employee" />

            <TextFlow maxWidth="500.0">
                <Text text="Are you sure you want to deactivate " />
                <Text fx:id="employeeNameText" styleClass="bold-text" text="Anna Nowak" />
                <Text text="? They will no longer be able to access the system." />
            </TextFlow>

            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <Button fx:id="cancelBtn" mnemonicParsing="false"
                            onAction="#handleCancel"
                            styleClass="buttons_basic" text="Cancel" />
                    <Button fx:id="deactivateBtn" mnemonicParsing="false"
                            onAction="#handleDeactivate" text="Deactivate">
                        <styleClass>
                            <String fx:value="buttons_basic" />
                            <String fx:value="buttons_basic_delete" />
                        </styleClass>
                    </Button>
                </children>
            </HBox>
        </children>
    </VBox>
</StackPane>
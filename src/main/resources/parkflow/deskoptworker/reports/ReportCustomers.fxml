<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="1110.0" spacing="8" stylesheets="@../styles/reports.css, @../styles/mainPanel.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parkflow.deskoptworker.Controllers.Reports.ReportCustomersController"
      style="-fx-background-color: transparent;">

    <VBox spacing="12" style="-fx-background-color: transparent;">

        <!-- Title section -->
        <VBox spacing="4">
            <Label styleClass="main_title" text="Customer Insights" />
            <Label styleClass="main_subtitle" text="Real-time analytics and performance metrics" />
        </VBox>

        <!-- Top Metric Cards Grid - 4 cards with icons -->
        <GridPane fx:id="metricsGrid" hgap="16" vgap="16">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="25" />
            </columnConstraints>
        </GridPane>

        <!-- Filter Bar -->
        <fx:include source="../components/filterBar.fxml" fx:id="filterBar"/>

        <!-- Top Customers by Spending Table -->
        <VBox spacing="16" styleClass="section_vbox">
            <children>
                <Label styleClass="section_title" text="Top Customers by Spending" />

                <TableView fx:id="topCustomersTable"
                           styleClass="customers-table"
                           minHeight="350"
                           prefHeight="400"
                           maxHeight="500">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="rankColumn"
                                     text="RANK"
                                     prefWidth="80"
                                     styleClass="rank-column"/>
                        <TableColumn fx:id="customerColumn"
                                     text="CUSTOMER"
                                     prefWidth="250"
                                     styleClass="customer-column"/>
                        <TableColumn fx:id="sessionsColumn"
                                     text="SESSIONS"
                                     prefWidth="150"
                                     styleClass="sessions-column"/>
                        <TableColumn fx:id="totalSpentColumn"
                                     text="TOTAL SPENT"
                                     prefWidth="150"
                                     styleClass="spent-column"/>
                        <TableColumn fx:id="avgDurationColumn"
                                     text="AVG DURATION"
                                     prefWidth="150"
                                     styleClass="duration-column"/>
                    </columns>
                </TableView>
            </children>
        </VBox>

        <!-- Bottom Row: Customer Behavior & Growth Metrics -->
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <children>
                <!-- Customer Behavior Box -->
                <VBox spacing="16" styleClass="section_vbox" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section_title" text="Customer Behavior" />

                        <VBox fx:id="behaviorMetricsContainer" spacing="16">
                            <!-- Metrics will be added programmatically -->
                        </VBox>
                    </children>
                </VBox>

                <!-- Growth Metrics Box -->
                <VBox spacing="16" styleClass="section_vbox" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section_title" text="Growth Metrics" />

                        <VBox fx:id="growthMetricsContainer" spacing="16">
                            <!-- Metrics will be added programmatically -->
                        </VBox>
                    </children>
                </VBox>
            </children>
        </HBox>

    </VBox>

</VBox>
